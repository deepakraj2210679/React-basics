          Add
        </button>
        <button type="button" onclick="clearForm()" class="bg-gray-400 text-white px-6 py-2 rounded hover:bg-gray-500">
          Clear
        </button>
      </div>
    </form>

    <!-- Table -->
    <table class="w-full text-sm border">
      <thead class="bg-green-600 text-white">
        <tr>
          <th class="p-2">ID</th>
