        <label class="text-sm font-semibold">Phone Number</label>
        <input id="phone" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <!-- Buttons -->
      <div class="col-span-2 flex gap-3 justify-center mt-4">
