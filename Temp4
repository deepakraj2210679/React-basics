<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Employee Management System</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-green-50 min-h-screen flex justify-center items-start py-10">

  <div class="w-full max-w-5xl bg-white rounded-xl shadow-xl p-8">

    <!-- Header with Logout -->
    <div class="relative mb-6">
      <h1 class="text-2xl font-bold text-center text-white bg-green-700 py-3 rounded-lg">
        Employee Management System
      </h1>

      <button onclick="logout()"
        class="absolute right-4 top-1/2 -translate-y-1/2 bg-red-600 text-white px-4 py-1 rounded hover:bg-red-700">
        Logout
      </button>
    </div>

    <!-- Error Message -->
    <p id="errorMsg" class="text-red-600 font-semibold text-center mb-4 hidden"></p>

    <!-- Form -->
    <form id="employeeForm" class="grid grid-cols-2 gap-4 mb-6">
      <input type="hidden" id="editIndex">

      <div>
        <label class="text-sm font-semibold text-green-700">Employee ID</label>
        <input id="empId" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Employee Name</label>
        <input id="empName" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Age</label>
        <input id="age" type="number" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Email</label>
        <input id="email" type="email" class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Phone Number</label>
        <input id="phone" placeholder="10-digit mobile"
          class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Department</label>
        <select id="department"
          class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
          <option value="">Select Department</option>
          <option>HR</option>
          <option>Development</option>
          <option>Testing</option>
          <option>Marketing</option>
          <option>Finance</option>
        </select>
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Gender</label>
        <div class="flex gap-4 mt-2 text-gray-700">
          <label><input type="radio" name="gender" value="Male"> Male</label>
          <label><input type="radio" name="gender" value="Female"> Female</label>
          <label><input type="radio" name="gender" value="Other"> Other</label>
        </div>
      </div>

      <div>
        <label class="text-sm font-semibold text-green-700">Date of Joining</label>
        <input id="doj" type="date"
          class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400">
      </div>

      <div class="col-span-2">
        <label class="text-sm font-semibold text-green-700">Address</label>
        <textarea id="address" rows="3"
          class="w-full border rounded px-3 py-2 focus:ring-2 focus:ring-green-400"></textarea>
      </div>

      <div class="col-span-2 flex gap-3 justify-center mt-4">
        <button type="submit"
          class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700">
          Add / Update
        </button>
        <button type="button" onclick="clearForm()"
          class="bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600">
          Clear
        </button>
      </div>
    </form>

    <!-- Table -->
    <table class="w-full text-sm border rounded overflow-hidden">
      <thead class="bg-green-700 text-white">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Dept</th>
          <th>Phone</th>
          <th>Gender</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tableBody" class="text-center text-gray-700"></tbody>
    </table>

  </div>

<script>
  let employees = JSON.parse(localStorage.getItem("employees")) || [];
  const tableBody = document.getElementById("tableBody");
  const errorMsg = document.getElementById("errorMsg");

  function renderTable() {
    tableBody.innerHTML = "";
    employees.forEach((e, i) => {
      tableBody.innerHTML += `
        <tr class="border-b hover:bg-green-50">
          <td class="font-semibold text-green-800">${e.id}</td>
          <td>${e.name}</td>
          <td>${e.department}</td>
          <td>${e.phone}</td>
          <td>${e.gender}</td>
          <td class="space-x-2">
            <button onclick="editEmployee(${i})" class="bg-yellow-400 px-2 py-1 rounded">Edit</button>
            <button onclick="deleteEmployee(${i})" class="bg-red-500 text-white px-2 py-1 rounded">Delete</button>
          </td>
        </tr>
      `;
    });
    localStorage.setItem("employees", JSON.stringify(employees));
  }

  employeeForm.addEventListener("submit", e => {
    e.preventDefault();
    errorMsg.classList.add("hidden");

    const phoneRegex = /^[6-9]\d{9}$/;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const gender = document.querySelector('input[name="gender"]:checked')?.value;

    if (!empId.value || !empName.value || !age.value || !email.value ||
        !phone.value || !department.value || !gender || !doj.value || !address.value)
      return showError("All fields are required.");

    if (age.value < 18 || age.value > 65)
      return showError("Age must be between 18 and 65.");

    if (!emailRegex.test(email.value))
      return showError("Invalid email format.");

    if (!phoneRegex.test(phone.value))
      return showError("Invalid phone number.");

    if (new Date(doj.value) > new Date())
      return showError("Date of joining cannot be in the future.");

    const emp = {
      id: empId.value,
      name: empName.value,
      age: age.value,
      email: email.value,
      phone: phone.value,
      department: department.value,
      gender,
      doj: doj.value,
      address: address.value
    };

    editIndex.value === "" ? employees.push(emp) : employees[editIndex.value] = emp;

    clearForm();
    renderTable();
  });

  function editEmployee(i) {
    const e = employees[i];
    empId.value = e.id;
    empName.value = e.name;
    age.value = e.age;
    email.value = e.email;
    phone.value = e.phone;
    department.value = e.department;
    document.querySelector(`input[value="${e.gender}"]`).checked = true;
    doj.value = e.doj;
    address.value = e.address;
    editIndex.value = i;
  }

  function deleteEmployee(i) {
    if (confirm("Delete this employee?")) {
      employees.splice(i, 1);
      renderTable();
    }
  }

  function clearForm() {
    employeeForm.reset();
    editIndex.value = "";
    errorMsg.classList.add("hidden");
  }

  function showError(msg) {
    errorMsg.textContent = msg;
    errorMsg.classList.remove("hidden");
  }

  function logout() {
    if (confirm("Are you sure you want to logout?")) {
      localStorage.clear();
      alert("Logged out successfully");
      window.location.reload();
    }
  }

  renderTable();
</script>

</body>
</html>
